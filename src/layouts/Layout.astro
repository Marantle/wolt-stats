---
// Import any scripts or styles needed by layout
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = "Wolt Stats Dashboard" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- OpenGraph tags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Personal Wolt order history visualization and statistics dashboard. Track your spending, favorite restaurants, and ordering patterns." />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Wolt Stats Dashboard" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="Personal Wolt order history visualization and statistics dashboard. Track your spending, favorite restaurants, and ordering patterns." />
	</head>
	<body class="bg-gray-50 min-h-screen">
		<a href="https://github.com/Marantle/wolt-stats" 
			class="fixed top-4 right-4 z-50 hover:opacity-80 transition-opacity" 
			target="_blank" 
			rel="noopener noreferrer"
			title="View on GitHub"
		>
			<svg height="32" aria-hidden="true" viewBox="0 0 16 16" version="1.1" width="32" data-view-component="true" class="octicon octicon-mark-github">
					<path d="M8 0c4.42 0 8 3.58 8 8a8.013 8.013 0 0 1-5.45 7.59c-.4.08-.55-.17-.55-.38 0-.27.01-1.13.01-2.2 0-.75-.25-1.23-.54-1.48 1.78-.2 3.65-.88 3.65-3.95 0-.88-.31-1.59-.82-2.15.08-.2.36-1.02-.08-2.12 0 0-.67-.22-2.2.82-.64-.18-1.32-.27-2-.27-.68 0-1.36.09-2 .27-1.53-1.03-2.2-.82-2.2-.82-.44 1.1-.16 1.92-.08 2.12-.51.56-.82 1.28-.82 2.15 0 3.06 1.86 3.75 3.64 3.95-.23.2-.44.55-.51 1.07-.46.21-1.61.55-2.33-.66-.15-.24-.6-.83-1.23-.82-.67.01-.27.38.01.53.34.19.73.9.82 1.13.16.45.68 1.31 2.69.94 0 .67.01 1.3.01 1.49 0 .21-.15.45-.55.38A7.995 7.995 0 0 1 0 8c0-4.42 3.58-8 8-8Z"></path>
			</svg>
		</a>
		<header class="bg-blue-600 text-white shadow-md">
			<div class="container mx-auto py-6 px-4">
				<h1 class="text-3xl font-bold">Wolt Stats Dashboard</h1>
				<p class="mt-2 text-blue-100">Visualizing your Wolt order history</p>
			</div>
		</header>
		
		<main class="container mx-auto py-8 px-4">
			<slot />
		</main>
		
		<footer class="bg-gray-800 text-white mt-12">
			<div class="container mx-auto py-6 px-4 text-center">
				<p class="mb-2">Built with Astro and TailwindCSS</p>
				<a href="https://github.com/Marantle/wolt-stats" class="text-blue-300 hover:text-blue-100 transition-colors" target="_blank" rel="noopener noreferrer">
					View on GitHub
				</a>
			</div>
		</footer>
	</body>
</html>
